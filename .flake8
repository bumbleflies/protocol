[flake8]
max-line-length = 120
max-complexity = 10
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache

# Ignore specific error codes
ignore = E203,E501,W503,W504

per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F811

# Warnings to show
select = E,W,F,C90

count = True
statistics = True
